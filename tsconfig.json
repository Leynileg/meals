{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "types": ["react-native", "jest", "styled-components-react-native"],
    "lib": ["ESNext"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": false,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // absolute imports
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@data/*": ["./data/*"],
      "@screens/*": ["./src/@screens/*"],
      "@typings/*": ["./src/typings/*"],
      "@consts/*": ["./src/consts/*"],
      "@store/*": ["./src/store/*"],
      "@services/*": ["./src/services/*"],
      "@controllers/*": ["./controllers/*"],
      "theme/*": ["./src/theme/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
